<% include ../partials/header %>

<div class="container">
	<div class="row mt-3">
		<div class="col-8">
			<p>Popular posts</p>
			<% posts.forEach(function(post){ %>
				<a href="/posts/<%= post._id %>" class="custom-card">
					<div class="card mb-3 text-dark">
					  <div class="row no-gutters">
					    <div class="col-md-4">
					      <img src="<%= post.image %>" class="card-img" alt="<%= post.title %>">
					    </div>
					    <div class="col-md-8">
					      <div class="card-body">
					      	<p class="mb-1">
					      		r/<%= post.subreadit %><small class="text-muted">
					      			 âš¬ Posted by u/<%= post.author.username%>
					      		</small>
					      	</p>
					        <h6 class="card-title mb-1"><%= post.title %></h5>
					        <p>
					        	<small>
						        	<button href="<%=post.link%>" class="btn btn-link p-0 text-right">
						        		<%= post.link.substring(12,32) %>... 
						        		<i class="fas fa-external-link-alt"></i>
							        </button>
							    </small>
					        </p>
					      </div>
					    </div>
					  </div>
					</div>
				</a>
			<% }); %>
		</div>
		<div class="col-4">
			<div class="card mb-3">
				<div class="card-body text-center">
					<a href="/posts/new" class="btn btn-primary btn-block">Create Post</a>
				</div>
			</div>
			<div class="card">
			  <div class="card-body">
			    This is some text within a card body.
			  </div>
			</div>
		</div>
	</div>
	<div class="row mt-3">
		<div class="col text-center">
			<a href="https://github.com/josh-english/readit" class="btn btn-outline-dark">
				View Source Code 
				<i class="fas fa-code"></i>
			</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>